{
  "name": "Company",
  "plural": "Companies",
  "base": "PersistedModel",
  "idInjection": true,
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string"
    },
    "logo": {
      "type": "string"
    },
    "facebook": {
      "type": "string"
    },
    "twitter": {
      "type": "string"
    },
    "linkedin": {
      "type": "string"
    },
    "seekingFulltime": {
      "type": "boolean"
    },
    "seekingCoop": {
      "type": "boolean"
    },
    "overallRating": {
      "type": "number",
      "dataType": "decimal",
      "precision": "3",
      "scale": "1"
    },
    "cultureRating": {
      "type": "number",
      "dataType": "decimal",
      "precision": "3",
      "scale": "1"
    },
    "difficultyRating": {
      "type": "number",
      "dataType": "decimal",
      "precision": "3",
      "scale": "1"
    },
    "description": {
      "type": "string",
      "dataType": "text"
    },
    "minPay": {
      "type": "number",
      "dataType": "decimal",
      "precision": "10",
      "scale": "2"
    },
    "maxPay": {
      "type": "number",
      "dataType": "decimal",
      "precision": "10",
      "scale": "2"
    },
    "verified": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "reviews": {
      "type": "hasMany",
      "model": "Review"
    },
    "perks": {
      "type": "hasMany",
      "model": "Perk",
      "through": "CompanyPerk"
    },
    "majors": {
      "type": "hasMany",
      "model": "Major",
      "through": "CompanyMajor"
    },
    "industries": {
      "type": "hasMany",
      "model": "Industry",
      "through": "CompanyIndustry"
    },
    "locations": {
      "type": "hasMany",
      "model": "City",
      "foreignKey": "",
      "through": "Location"
    },
    "suggestedEdits": {
      "type": "hasMany",
      "model": "SuggestedEdit",
      "foreignKey": ""
    },
    "events": {
      "type": "hasMany",
      "model": "Event",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findOne"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "verified",
      "permission": "ALLOW",
      "property": "__create__reviews"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "verified",
      "permission": "ALLOW",
      "property": "__create__suggestedEdits"
    }
  ],
  "methods": []
}
